@import '../../common.wxss';
#product{
    display: -webkit-flex;
    flex-direction:column;
}
/*搜索控件开始*/
.search{
    width:700rpx;
    height:50rpx;
    margin-left:32rpx;
    margin-top:16rpx;
}
.search-l{
    float:left;
    width:86rpx;
    height:50rpx;
    line-height:50rpx;
    text-align:left;
    font-size:24rpx;
}
.search-cen{
    width:500rpx;
    height:50rpx;
    float:left;
    margin-right:28rpx;
}
.search-key{
    font-size:24rpx;
    width:480rpx;
    height:46rpx;
    padding-left:16rpx;
    float:left;
    border-radius:10rpx;
    border:2rpx solid #bbbbbb;
}
.search-hunt{
    width:84rpx;
    padding:0rpx;
    height:50rpx;
    border:none;
    border-radius:10rpx;
    background-color:#2FA2D4;
    color:white;
    cursor:pointer;
    font-size:24rpx;
    line-height:50rpx;
    text-align:center;
}
/*搜索控件结束*/

/*图文列表开始*/
.graphics{
    width:750rpx;
    margin-top:20rpx;
}
.graphics-baoguo{
    width:750rpx;
}
.sketch{
    height:326rpx;
    width:316rpx;
    padding-left:32rpx;
    padding-right:16rpx;
    float:left;
    margin-bottom:20rpx;
}
.sketch>image{
    width:316rpx;
    height:240rpx;
}
.sketch>text{
    height: 72rpx;
    display: -webkit-box; 
    -webkit-line-clamp: 2; 
    -webkit-box-orient: vertical; 
    overflow: hidden;
    font-size:24rpx;
    line-height:36rpx;
}
.graphics-none{
    float:left;
    height:30rpx;
    line-height:30rpx;
    width:750rpx;
    margin:0 auto;
    text-align:center;
    color:#888888;
    font-size:24rpx;
    margin-top:20rpx;
    margin-bottom:30rpx;
}
.graphics-none1{
    float:left;
    height:30rpx;
    line-height:30rpx;
    width:750rpx;
    margin:0 auto;
    text-align:center;
    color:#888888;
    font-size:24rpx;
    margin-top:20rpx;
    margin-bottom:30rpx;
}
/*图文列表结束*/

